<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Journal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Journal.NoActionBar" parent="Theme.Journal">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Journal.Toolbar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="searchViewStyle">@style/Theme.Journal.Toolbar.SearchView</item>
    </style>

    <style name="Theme.Journal.Toolbar.White">
        <item name="android:textColorPrimary">@android:color/secondary_text_light</item>
        <item name="android:textColorSecondary">@android:color/secondary_text_light</item>
        <item name="android:background">@color/white</item>
        <item name="iconTint">@android:color/secondary_text_light</item>
    </style>

    <style name="Theme.Journal.Toolbar.SearchView" parent="Widget.AppCompat.SearchView">
        <item name="searchIcon">@null</item>
        <item name="queryBackground">@null</item>
    </style>

    <style name="Theme.Journal.Toolbar.SearchView.AutoCompleteTextView" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="background">@null</item>
    </style>
</resources>