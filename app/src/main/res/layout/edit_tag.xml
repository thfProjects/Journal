<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="?attr/actionBarSize"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_label_24"
        app:tint="@color/black"
        android:scaleType="centerInside"
        android:id="@+id/icon_left"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/name"
        android:gravity="center_vertical"
        android:background="@null"
        android:hint="Tag needs a name"
        android:maxLines="1"
        android:layout_toLeftOf="@id/icon_right"
        android:layout_toStartOf="@id/icon_right"
        android:layout_toRightOf="@id/icon_left"
        android:layout_toEndOf="@id/icon_left" />

    <ImageView
        android:layout_width="?attr/actionBarSize"
        android:layout_height="match_parent"
        android:src="@drawable/ic_baseline_edit_24"
        app:tint="@color/black"
        android:scaleType="centerInside"
        android:id="@+id/icon_right"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>